# Sanctions Screening API Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# API Configuration
# =============================================================================
API_TITLE=Sanctions Screening API
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8080

# =============================================================================
# Yente Service Configuration
# =============================================================================
YENTE_BASE_URL=http://127.0.0.1:5000
YENTE_TIMEOUT=15
YENTE_CONNECT_TIMEOUT=5

# =============================================================================
# Dataset Configuration
# =============================================================================
# Comma-separated list of datasets to screen against
DATASETS=us_ofac_sdn,un_sc_sanctions

# =============================================================================
# Decision Thresholds
# =============================================================================
# These thresholds control when matches trigger different actions
# Scale: 0.0 to 1.0 (higher = stronger match confidence)

# Info threshold - matches logged but no action taken
THRESHOLD_INFO=0.50

# Review threshold - manual review required, soft hold on transaction
THRESHOLD_REVIEW=0.70

# Block threshold - high confidence match, hard hold, compliance escalation
THRESHOLD_BLOCK=0.85

# =============================================================================
# Response Configuration
# =============================================================================
# Maximum number of matches to return in API response
MAX_MATCHES_RETURNED=10

# =============================================================================
# Audit Logging Configuration
# =============================================================================
LOG_BASE_DIR=C:\SANCTIONS-CHECK\logs\api
LOG_RETENTION_DAYS=90
LOG_MAX_SIZE_MB=100

# =============================================================================
# Data Paths (for reference only, not used by API directly)
# =============================================================================
DATA_BASE_DIR=D:\Sanctions-data
OFAC_DATA_PATH=D:\Sanctions-data\datasets\raw\ofac
UN_DATA_PATH=D:\Sanctions-data\datasets\raw\un